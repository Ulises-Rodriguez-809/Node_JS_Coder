<div>
    <div>
        <h1>Bienvenido {{user.full_name}}</h1>
        <p>Estos son tus Datos:</p>
        <ul>
            <li>tu edad es : {{user.age}}</li>
            <li>tu email es : {{user.email}}</li>
            <li>tu rol es : {{user.rol}}</li>
            <li> 
                <p>cart id :</p>
                <p id="id-cart">{{user.cartID}}</p>
            </li>
        </ul>
    </div>
    <div>
        <a href="/api/sessions/logout"><button>Salir</button></a>
    </div>
    <h2>Productos:</h2>

    {{#each products.docs}}
    <form class="form">
        <div>
            <div>
                <label>id productos:</label><br>
                <input type="text" value={{this.id}} name="id" readonly>
            </div>
            <div>
                <label>Titulo:</label><br>
                <input class="title" type="text" value={{this.title}} name="title" readonly>
            </div>
            <div>
                <label>Descripcion:</label><br>
                <input type="text" value={{this.description}} name="description" readonly>
            </div>
            <div>
                <label>Codigo:</label><br>
                <input type="text" value={{this.code}} name="code" readonly>
            </div>
            <div>
                <label>Precio:</label><br>
                <input type="text" value={{this.price}} name="price" readonly>
            </div>
            <div>
                <label>Status:</label><br>
                <input type="text" value={{this.status}} name="status" readonly>
            </div>
            <div>
                <label>Categoria:</label><br>
                <input type="text" value={{this.category}} name="category" readonly>
            </div>
            <div>
                <label>Miniaturas:</label><br>
                <input type="text" value={{this.thumbnails}} name="thumbnails" readonly>
            </div>
            <div>
                <input type="submit" value="Comprar">
            </div>
        </div>
    </form>
    {{/each}}


    <div>
        {{#if products.hasPrevPage}}
        <a href="/products?limit={{products.limit}}&page={{products.prevPage}}">Anterior</a>
        {{/if}}
        <span>Pagina {{products.page}} de {{products.totalPages}}</span>
        {{#if products.hasNextPage}}
        <a href="/products?limit={{products.limit}}&page={{products.nextPage}}">Siguiente</a>
        {{/if}}
    </div>
</div>
<script src="/js/products.js"></script>