<h1>{{text}}</h1>
<div>
    <h2>Agregar nuevo producto</h2>
    <form name="nuevo-producto" id="nuevo-producto">
        <div>
            <label for="input-title-add">Titulo</label>
            <input type="text" name="title" id="input-title-add" placeholder="Nombre del producto" required>
        </div>
        <div>
            <label for="input-description-add">Descripcion</label>
            <input type="text" name="description" id="input-description-add"
                placeholder="Descripcion del producto" required>
        </div>
        <div>
            <label for="input-code-add">Code</label>
            <input type="text" name="code" id="input-code-add" placeholder="Code del producto" required>
        </div>
        <div>
            <label for="input-price-add">Precio</label>
            <input type="number" name="price" id="input-price-add" placeholder="Precio del producto"
                min="1" required>
        </div>
        <div>
            <label for="input-stock-add">Stock</label>
            <input type="number" name="stock" id="input-stock-add" placeholder="Stock del producto"
                min="1" required>
        </div>
        <div>
            <label for="input-category-add">Categoria</label>
            <input type="text" name="category" id="input-category-add"
                placeholder="Categoria del producto" required>
        </div>
        <div>
            <label for="input-thumbnails-add">Thumbnails</label>
            <input type="text" name="thumbnails" id="input-thumbnails-add"
                placeholder="urls separadas por ','">
        </div>
        <div>
            <input type="submit">AÃ±adir</input>
        </div>
    </form>
</div>
