<h1>{{text}}</h1>
<div>
    <form name="nuevo-producto" id="nuevo-producto">
        <div>
            <label for="input-title">Titulo</label>
            <input type="text" name="title" id="input-title" placeholder="Nombre del producto">
        </div>
        <div>
            <label for="input-description">Descripcion</label>
            <input type="text" name="description" id="input-description"
                placeholder="Descripcion del producto">
        </div>
        <div>
            <label for="input-code">Code</label>
            <input type="text" name="code" id="input-code" placeholder="Code del producto">
        </div>
        <div>
            <label for="input-price">Precio</label>
            <input type="number" name="price" id="input-price" placeholder="Precio del producto"
                min="1">
        </div>
        <div>
            <label for="input-stock">Stock</label>
            <input type="number" name="stock" id="input-stock" placeholder="Stock del producto"
                min="1">
        </div>
        <div>
            <label for="input-category">Categoria</label>
            <input type="text" name="category" id="input-category"
                placeholder="Categoria del producto">
        </div>
        <div>
            <label for="input-thumbnails">Thumbnails</label>
            <input type="text" name="thumbnails" id="input-thumbnails"
                placeholder="urls separadas por ','">
        </div>
        <div>
            <input type="submit">AÃ±adir</input>
        </div>
    </form>
</div>
<div>
    <label for="input-id">Eliminar Producto</label>
    <input type="text" name="eliminarProducto" id="input-id" placeholder="Ingrese el id del producto" min="0">
    <input type="submit" id="btn-eliminar" value="Eliminar"></input>

</div>
<div>
    <ul id="ul-products"></ul>
</div>
